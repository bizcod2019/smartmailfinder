# Streamlit Cloud 环境变量配置示例
# 在 Streamlit Cloud 的 Secrets 管理中设置这些变量

# 阿里云OSS配置
ALIYUN_OSS_ACCESS_KEY = "your_access_key_id"
ALIYUN_OSS_SECRET_KEY = "your_access_key_secret"
ALIYUN_OSS_BUCKET = "email-search-bucket"
ALIYUN_OSS_ENDPOINT = "oss-cn-hangzhou.aliyuncs.com"

# AI模型配置
SENTENCE_TRANSFORMER_MODEL = "paraphrase-multilingual-MiniLM-L12-v2"
OPENAI_API_KEY = ""

# 应用配置
MAX_EMAILS = 30000
CACHE_DIR = "./cache"
DEBUG = false

# 索引控制
INDEX_ASYNC = false
INDEX_BATCH_SIZE = 500
INDEX_TIME_SLICE_SEC = 20

# 错误告警（可选）
APP_ERROR_WEBHOOK_URL = ""

# 健康检查（可选）
HEALTHCHECK_TOKEN = ""